{
    "type": "apoli:multiple",
    "badges": [
        {
            "sprite": "origins:textures/gui/badge/active.png",
            "text": "origins.gui.badge.active"
        },
        {
            "sprite": "minecraft:textures/item/clock_00.png",
            "text": "void-entities.gui.badge.void_blade/cooldown"
        }
    ],
    "is_active": {
        "type": "apoli:resource",
        "min": 0,
        "min_action": {
            "type": "apoli:execute_command",
            "command": "tag @s remove can_use_void_blade"
        },
        "max": 1,
        "max_action": {
            "type": "apoli:execute_command",
            "command": "tag @s add can_use_void_blade"
        },
        "start_value": 0,
        "hud_render": {
            "should_render": false
        }
    },
    "cooldown": {
        "type": "apoli:cooldown",
        "cooldown": 6000,
        "hud_render": {
            "should_render": true,
            "sprite_location": "void-entities:textures/gui/resource_bar.png",
            "bar_index": 1
        }
    },
    "activate": {
        "type": "apoli:active_self",
        "cooldown": 1,
        "key":{
            "key": "key.saveToolbarActivator"
        },
        "condition": {
            "type": "apoli:and",
            "conditions": [
                {
                    "type": "apoli:resource",
                    "resource": "*:*_is_active",
                    "comparison": "==",
                    "compare_to": 0
                },
                {
                    "type": "apoli:resource",
                    "resource": "*:*_cooldown",
                    "comparison": "==",
                    "compare_to": 0
                },
                {
                    "type": "apoli:or",
                    "conditions": [
                        {
                            "type": "apoli:and",
                            "conditions": [
                                {
                                    "type": "apoli:resource",
                                    "resource": "*:void_energy",
                                    "comparison": ">",
                                    "compare_to": 6000
                                },
                                {
                                    "type": "apoli:advancement",
                                    "advancement": "minecraft:story/enter_the_end",
                                    "inverted": true
                                }
                            ]
                        },
                        {
                            "type": "apoli:and",
                            "conditions": [
                                {
                                    "type": "apoli:resource",
                                    "resource": "*:void_energy",
                                    "comparison": ">",
                                    "compare_to": 5000
                                },
                                {
                                    "type": "apoli:advancement",
                                    "advancement": "minecraft:story/enter_the_end"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "apoli:resource",
                    "resource": "*:void_knight/call_to_the_void_is_active",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        },
        "entity_action": {
            "type": "apoli:and",
            "actions": [
                {
                    "type": "apoli:if_else",
                    "condition": {
                        "type": "apoli:advancement",
                        "advancement": "minecraft:story/enter_the_end"
                    },
                    "if_action": {
                        "type": "apoli:execute_command",
                        "command": "function void-entities:void_knight/create_void_blade_enhanced"
                    },
                    "else_action": {
                        "type": "apoli:execute_command",
                        "command": "function void-entities:void_knight/create_void_blade_regular"
                    }
                },
                {
                    "type": "apoli:change_resource",
                    "resource": "*:*_is_active",
                    "change": 1
                }
            ]
        },
        "hud_render": {
            "should_render": false
        }
    },
    "deactivate": {
        "type": "apoli:action_over_time",
        "interval": 3,
        "condition": {
            "type": "apoli:and",
            "conditions": [
                {
                    "type": "apoli:resource",
                    "resource": "*:*_is_active",
                    "comparison": "==",
                    "compare_to": 1
                },
                {
                    "type": "apoli:or",
                    "conditions": [
                        {
                            "type": "apoli:resource",
                            "resource": "*:void_energy",
                            "comparison": "<=",
                            "compare_to": 0
                        },
                        {
                            "type": "apoli:and",
                            "conditions": [
                                {
                                    "type": "apoli:command",
                                    "command": "execute if entity @s[nbt={Inventory:[{id:\"minecraft:netherite_sword\",tag:{Unbreakable:1b,CustomData:19534s}}]}]",
                                    "comparison": "==",
                                    "compare_to": 0
                                },
                                {
                                    "type": "apoli:command",
                                    "command": "execute if entity @s[nbt={Inventory:[{id:\"minecraft:netherite_sword\",tag:{Unbreakable:1b,CustomData:26974s}}]}]",
                                    "comparison": "==",
                                    "compare_to": 0
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "rising_action": {
            "type": "apoli:and",
            "actions": [
                {
                    "type": "apoli:change_resource",
                    "resource": "*:*_is_active",
                    "change": -1
                },
                {
                    "type": "apoli:trigger_cooldown",
                    "power": "*:*_cooldown"
                }
            ]
        }
    },
    "upkeep": {
        "type": "apoli:action_over_time",
        "interval": 2,
        "condition": {
            "type": "apoli:and",
            "conditions": [
                {
                    "type": "apoli:resource",
                    "resource": "*:*_is_active",
                    "comparison": "==",
                    "compare_to": 1
                },
                {
                    "type": "apoli:resource",
                    "resource": "*:void_knight/call_to_the_void_is_active",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        },
        "entity_action": {
            "type": "apoli:change_resource",
            "resource": "*:void_energy",
            "change": -25
        }
    }
}
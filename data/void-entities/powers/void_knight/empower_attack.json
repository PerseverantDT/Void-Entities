            "power": "*:*_cooldown"
        },
        "max": 1,
        "max_action": {
            "type": "apoli:execute_command",
            "command": "function void-entities:alerts/void_knight_empower_attack_active"
        },
        "start_value": 0,
        "hud_render": {
            "should_render": false
        }
    },
    "cooldown": {
        "type": "apoli:cooldown",
        "cooldown": 100,
        "hud_render": {
            "should_render": true,
            "sprite_location": "void-entities:textures/gui/resource_bar.png",
            "bar_index": 3
        }
    },
    "activate": {
        "type": "apoli:active_self",
        "cooldown": 1,
        "condition": {
            "type": "apoli:and",
            "conditions": [
                {
                    "type": "apoli:resource",
                    "resource": "*:*_cooldown",
                    "comparison": "==",
                    "compare_to": 0
                },
                {
                    "type": "apoli:resource",
                    "resource": "*:void_energy",
                    "comparison": ">=",
                    "compare_to": 750
                },
                {
                    "type": "apoli:resource",
                    "resource": "*:void_knight/call_to_the_void_is_active",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        },
        "key": {
            "key": "key.origins.primary_active"
        },
        "entity_action": {
            "type": "apoli:and",
            "actions": [
                {
                    "type": "apoli:change_resource",
                    "resource": "*:*_is_active",
                    "change": 1
                },
                {
                    "type": "apoli:change_resource",
                    "resource": "*:void_energy",
                    "change": -750
                }
            ]
        }
    },
    "attack_buff": {
        "type": "apoli:modify_damage_dealt",
        "condition": {
            "type": "apoli:resource",
            "resource": "*:*_is_active",
            "comparison": "==",
            "compare_to": 1
        },
        "modifiers": [
            {
                "operation": "multiply_base_multiplicative",
                "value": 0.25
            },
            {
                "operation": "add_base_late",
                "value": 2
